<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="750.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.CreateBookController">
   <children>
      <Label alignment="TOP_LEFT" layoutX="24.0" layoutY="20.0" prefHeight="72.0" prefWidth="360.0" text="Cadastre novo livro" textFill="#012e40">
         <font>
            <Font name="Archivo SemiBold" size="32.0" />
         </font>
      </Label>
      <AnchorPane layoutX="24.0" layoutY="92.0" prefHeight="80.0" prefWidth="360.0">
         <children>
            <Label layoutY="-4.0" prefHeight="40.0" prefWidth="360.0" text="Título" textFill="#012e40" AnchorPane.leftAnchor="0.0">
