      </AnchorPane>
      <AnchorPane layoutX="24.0" layoutY="172.0" prefHeight="80.0" prefWidth="360.0">
         <children>
            <Label layoutY="-4.0" prefHeight="40.0" prefWidth="360.0" text="Autor" textFill="#012e40">
               <font>
                  <Font name="Archivo Regular" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="txAuthor" layoutY="36.0" prefHeight="35.0" prefWidth="360.0" promptText="Insira aqui o autor do livro." styleClass="field-round-white" stylesheets="@assets/style.css" />
