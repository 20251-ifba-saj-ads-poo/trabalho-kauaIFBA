         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button defaultButton="true" layoutX="255.0" layoutY="682.0" mnemonicParsing="false" onAction="#cancel" prefHeight="35.0" prefWidth="127.0" styleClass="btn-round-white" stylesheets="@assets/style.css" text="Voltar">
